<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".otherActivities.MoreInfo">

    <TextView
        android:layout_margin="15sp"
        android:id="@+id/title_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="More Info"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@android:color/black"
        android:textSize="18dp"
        android:textStyle="bold"
        />
<ImageView
    android:id="@+id/withBox"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toBottomOf="@id/title_info"
    android:src="@drawable/place_holder_image"
    android:adjustViewBounds="true"/>
    <TextView
        android:id="@+id/symptomsList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Symptoms "
        app:layout_constraintTop_toBottomOf="@id/withBox"
        android:textColor="@android:color/black"
        android:textSize="16dp"
        android:layout_margin="12dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>