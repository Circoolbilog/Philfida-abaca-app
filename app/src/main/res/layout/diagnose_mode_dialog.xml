<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/translucent_bg">

    <TextView
        android:id="@+id/dialogTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Select Diagnose Mode"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        android:background="@color/translucent_bg"
        android:padding="15dp"
        />
    <TextView
        android:padding="15dp"
        android:id="@+id/diagnoseBody"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/dialogTitle"
        android:text="@string/detection_mode_desc"
        android:textSize="15sp"
        android:textColor="@android:color/black"
        />
    <CheckBox
        android:padding="5dp"
        android:layout_margin="10dp"
        android:id="@+id/rememberChoice"
        app:layout_constraintTop_toBottomOf="@id/diagnoseBody"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Remember my choice"
        />

</androidx.constraintlayout.widget.ConstraintLayout>